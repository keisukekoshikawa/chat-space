= form_for group do |f|
  - if group.errors.any?
    .chat-group-form__errors
      %h2= "#{group.errors.full_messages.count}errors occurred."
      %ul
        - group.errors.full_messages.each do |message|
          %li= message

  .chat-group-form__field
    .chat-group-form__field--left
      = f.label 'Group Name', class: 'chat-group-form__label'
    .chat-group-form__field--right
      = f.text_field :name, class: 'chat__group_name chat-group-form__input', placeholder: 'Please input Group Name'

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label 'Add ChatMember', class: 'chat-group-form__label'
    .chat-group-form__field--right
      .chat-group-form__search.clearfix
        = text_field_tag :keyword, '', placeholder: 'Please input ChatMember`s name', id: 'user-search-field', class: 'chat-group-form__input'
      #user-search-result

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label 'Added ChatMembers', class: 'chat-group-form__label'
    .chat-group-form__field--right
      #chat-group-users
        #chat-group-user.chat-group-user.clearfix
          = f.hidden_field :user_ids, name: 'group[user_ids][]', value: current_user.id
          %p.chat-group-user__name
            = current_user.name

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit class: 'chat-group-form__action-btn'
